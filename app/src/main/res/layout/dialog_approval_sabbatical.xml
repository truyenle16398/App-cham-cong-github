<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            //ho ten
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Họ và tên:"
                    android:textColor="@color/textne"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_detail_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/textcolor"
                    android:textSize="20dp" />
            </LinearLayout>
            //chuc vu
            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/textne"
                    android:textSize="20dp"
                    android:text="Chức vụ:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=""
                    android:layout_weight="2"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp"
                    android:id="@+id/tv_detail_role"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            //ngay off
            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/textne"
                    android:textSize="20dp"
                    android:text="Ngày nghỉ:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="(10 ngày) từ ngày 11-3-2020 đến hết ngày 13-4-2020"
                    android:layout_weight="2"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp"
                    android:id="@+id/tv_detail_dayoff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            //ngay trolai
            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/textne"
                    android:textSize="20dp"
                    android:text="Ngày làm lại:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="11-3-2020"
                    android:layout_weight="2"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp"
                    android:id="@+id/tv_detail_dayreturn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
            //ly do
            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/textne"
                    android:textSize="20dp"
                    android:text="Lý do:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="ádasda"
                    android:layout_weight="2"
                    android:textColor="@color/textcolor"
                    android:textSize="20dp"
                    android:id="@+id/tv_detail_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            //trang thai
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                //
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_approval"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ffffff"
                        android:background="#FABE68"
                        android:text="Duyệt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_approval_back"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/vien_edittext"
                        android:text="Từ chối"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_comment"
                    android:hint="Trả lời"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>